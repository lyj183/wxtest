@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  30% {
    transform: rotate(5deg);
  }

  100% {
    transform: rotate(-90deg);
    opacity: 0;
  }
}

@-webkit-keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  30% {
    transform: rotate(5deg);
  }

  100% {
    transform: rotate(-90deg);
    opacity: 0;
  }
}

@keyframes spin1 {
  0% {
    transform: rotate(90deg);
    opacity: 0;
  }

  50% {
    transform: rotate(90deg);
    opacity: 0;
  }

  100% {
    transform: rotate(0deg);
    opacity: 1;
  }
}

@-webkit-keyframes spin1 {
  0% {
    transform: rotate(90deg);
    opacity: 0;
  }

  50% {
    transform: rotate(90deg);
    opacity: 0;
  }

  100% {
    transform: rotate(0deg);
    opacity: 1;
  }
}

